<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    android:layout_marginBottom="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_profile_img_cv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_puppy_exp1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인절미 찹쌀떡"
        android:textSize="10sp"
        android:textColor="#262626"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/item_profile_img_cv"
        app:layout_constraintTop_toTopOf="@id/item_profile_img_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_profile_img_cv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_log_cover_img_cv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/item_profile_img_cv"
        app:layout_constraintStart_toStartOf="@id/item_profile_img_cv">
        <ImageView
            android:id="@+id/item_log_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/img_puppy_exp1"
            android:src="@drawable/background_gradation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_bookmark_iv"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_bookmark"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/item_log_cover_img_cv"
        app:layout_constraintEnd_toEndOf="@id/item_log_cover_img_cv"/>

    <ImageView
        android:id="@+id/item_several_img_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_several_img"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@id/item_log_cover_img_cv"
        app:layout_constraintEnd_toEndOf="@id/item_log_cover_img_cv"/>

    <TextView
        android:id="@+id/item_log_contents_tv"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:textColor="@color/black"
        android:text="밥그릇에 들어가 있는 인절미랍니다 귀여워서 기절 #반려견 #리트..."
        android:textSize="10sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/item_log_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@id/item_log_cover_img_cv"/>

    <ImageView
        android:id="@+id/item_comment_iv"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_comment"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/item_log_contents_tv"
        app:layout_constraintTop_toBottomOf="@id/item_log_contents_tv"/>

    <TextView
        android:id="@+id/item_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="@id/item_comment_iv"
        app:layout_constraintStart_toEndOf="@id/item_comment_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_comment_iv"/>

    <ImageView
        android:id="@+id/item_favorite_iv"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_favorite_unselected"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toEndOf="@id/item_comment_tv"
        app:layout_constraintTop_toTopOf="@id/item_comment_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_comment_iv"/>

    <TextView
        android:id="@+id/item_favorite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="@id/item_favorite_iv"
        app:layout_constraintStart_toEndOf="@id/item_favorite_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_favorite_iv"/>

    <ImageView
        android:id="@+id/item_share_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_share"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/item_log_cover_img_cv"
        app:layout_constraintTop_toTopOf="@id/item_favorite_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_favorite_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>