<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="95dp"
        app:fabCustomSize="60dp"
        app:tint="@color/white"
        android:src="@drawable/ic_write"
        android:background="@color/main_color"
        app:backgroundTint="@color/main_color"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_category_title_tv"
                android:layout_width="126dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="반려동물 강아지"
                android:textSize="16sp"
                android:textColor="#D9000000"
                android:layout_marginStart="15dp"
                android:layout_marginTop="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/info_category_01_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_category_title_tv">

                <TextView
                    android:id="@+id/info_category_01_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:text="강아지"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_on_background" />

                <TextView
                    android:id="@+id/info_category_02_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:text="고양이"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_off_background" />

                <TextView
                    android:id="@+id/info_category_03_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:text="파충류"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_off_background" />

                <TextView
                    android:id="@+id/info_category_04_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:text="어류"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_off_background" />

                <TextView
                    android:id="@+id/info_category_05_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:text="앵무새"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_off_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_category_02_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="@id/info_category_01_ll"
                app:layout_constraintTop_toBottomOf="@id/info_category_01_ll">

                <TextView
                    android:id="@+id/info_category_06_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:text="설치류"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_off_background" />

                <TextView
                    android:id="@+id/info_category_07_tv"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:text="+"
                    android:textColor="@color/category_gray_color"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/category_chip_plus_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_color"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="@id/info_category_title_tv"
                app:layout_constraintTop_toBottomOf="@id/info_category_02_ll">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/info_log_title_tv"
                        android:layout_width="244dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:text="최근 로그"
                        android:textSize="16sp"
                        android:textColor="#D9000000"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/info_log_view_iv"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_list"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/info_log_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/info_log_title_tv"/>

                    <TextView
                        android:id="@+id/info_log_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="반려 동물에 대한 정보를 통해 필요한 지식을 쌓아보세요."
                        android:textSize="10sp"
                        android:textColor="#999999"
                        app:layout_constraintTop_toBottomOf="@id/info_log_title_tv"
                        app:layout_constraintStart_toStartOf="@id/info_log_title_tv"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/info_log_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_log_tv"
                        tools:listitem="@layout/item_info_list" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>