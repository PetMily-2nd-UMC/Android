<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="95dp"
        app:fabCustomSize="60dp"
        app:tint="@color/white"
        android:src="@drawable/ic_write"
        android:background="@color/main_color"
        app:backgroundTint="@color/main_color"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/category_title_tv"
                    android:layout_width="126dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="top"
                    android:text="반려동물 강아지"
                    android:textSize="16sp"
                    android:textColor="#D9000000"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="90dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:id="@+id/category_01_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_title_tv">

                    <TextView
                        android:id="@+id/category_01_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:text="강아지"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_on_background" />

                    <TextView
                        android:id="@+id/category_02_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:text="고양이"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_off_background" />

                    <TextView
                        android:id="@+id/category_03_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:text="파충류"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_off_background" />

                    <TextView
                        android:id="@+id/category_04_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:text="어류"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_off_background" />

                    <TextView
                        android:id="@+id/category_05_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:text="앵무새"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_off_background" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_02_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="@id/category_01_ll"
                    app:layout_constraintTop_toBottomOf="@id/category_01_ll">

                    <TextView
                        android:id="@+id/category_06_tv"
                        android:layout_width="56dp"
                        android:layout_height="22dp"
                        android:text="설치류"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_off_background" />

                    <TextView
                        android:id="@+id/category_07_tv"
                        android:layout_width="26dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:text="+"
                        android:textColor="@color/category_gray_color"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/category_chip_plus_background" />

                </LinearLayout>

                <TextView
                    android:id="@+id/log_title_tv"
                    android:layout_width="244dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="top"
                    android:text="최근 로그"
                    android:textSize="16sp"
                    android:textColor="#D9000000"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@id/category_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/category_02_ll"/>

                <ImageView
                    android:id="@+id/communication_log_view_iv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_list"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/log_title_tv"
                    app:layout_constraintBottom_toBottomOf="@id/log_title_tv"/>

                <TextView
                    android:id="@+id/communication_log_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나만이 아는 반려동물 일상을 공유하고 소통하세요."
                    android:textSize="10sp"
                    android:textColor="#999999"
                    app:layout_constraintTop_toBottomOf="@id/log_title_tv"
                    app:layout_constraintStart_toStartOf="@id/log_title_tv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/communication_log_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginHorizontal="2dp"
                    tools:listitem="@layout/item_log_grid"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/communication_log_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



